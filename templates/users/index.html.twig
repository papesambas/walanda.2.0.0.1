{% extends 'users/users.html.twig' %}

{% block title %}Users index
{% endblock %}

{% block body %}
	<h1>Users index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Nom et Pr√©nom</th>
				<th>Username</th>
				<th>Email</th>
				<th>IsVerified</th>
				<th>CreatedAt</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for user in users %}
				<tr>
					<td>{{ user.id }}</td>
					<td>{{ user.nom|upper }}
						{{ user.prenom|capitalize }}</td>
					<td>{{ user.username }}</td>
					<td>{{ user.email }}</td>
					<td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
					<td>{{ user.createdAt ? user.createdAt|date('Y-m-d') : '' }}</td>
					<td>
						<a class="btn btn-primary btn-sm" href="{{ path('users_app_show', {'id': user.id}) }}">show</a>
						<a class="btn btn-primary btn-sm" href="{{ path('users_app_edit', {'id': user.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="12">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('users_app_new') }}">Create new</a>
{% endblock %}
